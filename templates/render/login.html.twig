{% extends 'component/view/base.html.twig' %}

{% block css %}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
    <div class="row">
        <h5 class="col title">
            Login
        </h5>
    </div>
    {{ form_start(form) }}
    {% if redirect %}
        <input type="hidden" name="_target_path" value="{{ redirect }}" />
    {% endif %}
    <div class="row">
        <div class="col-md-8">
            {{ form_errors(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            {{ form_errors(form.username) }}
            {{ form_row(form.username) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            {{ form_errors(form.password) }}
            {{ form_row(form.password) }}
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-8">
            <a href="{{ path("profile_register") }}">Not a user? Register here</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block modal %}
{% endblock %}